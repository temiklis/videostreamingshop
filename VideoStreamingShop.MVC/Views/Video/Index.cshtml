@model VideoStreamingShop.MVC.ViewModels.PaginationViewModel<VideoStreamingShop.MVC.ViewModels.Video.VideoViewModel>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/videopage.js"></script>
<link rel="stylesheet" href="~/css/test.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/spoiler.css" />
<div>
    <div class="container">
        <div class="row h-25" style="text-align:justify; max-height:300px">
            @foreach (var video in Model.Data)
            {
                <div class="col-sm-4">
                    <div>
                        <h1>@video.Name</h1>
                    </div>
                    <div class="img-container d-flex justify-content-center">
                        <img src="https://pp.userapi.com/c841430/v841430971/497cb/ncMEILjxvVY.jpg?ava=1" class="img-fluid"/>
                        <span class="top-left">@video.AgeRate</span>
                    </div>
                    <div>
                        @video.Price
                    </div>
                    <div class="box more">
                        <div>
                            <span>Read More</span>
                            <p>@video.Description</p>
                        </div>
                        <span>Read More</span>
                    </div>
                </div>
            }
        </div>
        </div> 
</div>
